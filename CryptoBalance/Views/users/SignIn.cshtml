@{
    ViewBag.Title = "SignIn";
}



<br />
<div class="row">
    <div class="col-sm-8">
        <img class="img-thumbnail " src="~/Content/Images/img_Home.png" />
    </div>
    <div class="col-sm-4 p-2 align-middle">
        <div class="bg-white border border-3 p-4 ">
            <form action="/" method="post">
                <div class="mb-3">
                    @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "Username" })
                </div>
                <br />
                <div class="mb-3">
                    @Html.Password("Password", null, new { @class = "form-control", placeholder = "Password" })
                </div>
                <br />
                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-primary w-100" formaction="/users/SignIn" />
                    <br />
                    <p><a href="#">Forgot Password?</a></p>
                </div>
                <hr />
                <div class="text-center">
                    @Html.ActionLink("Create New Account", "Create", "users", null, new { @class = "btn btn-primary w-75 bg-success text-decoration-none" })
                </div>
                <br />
                <div class="text-center">
                    @Html.ActionLink("Check API Response", "APITest", "users", null, new { @class = "btn btn-primary w-75 bg-success text-decoration-none" })
                </div>
            </form>

        </div>
    </div>
</div>