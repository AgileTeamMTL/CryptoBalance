@model CryptoBalance.transaction

@{
    ViewBag.Title = "Delete";
}


<div class="bg-white border border-3 p-4 text-center">
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Crypto Currency
        </dt>

        <dd>
            @Html.DisplayFor(model => model.crypto_coin)
        </dd>

        <dt>
            Market Price (USD)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.market_price)
        </dd>

        <dt>
            Amount (USD)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.amount)
        </dd>

        <dt>
            Total Coins
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cryto_total)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default border border-1 me-3" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default border border-1" })
        </div>
    }
</div>
